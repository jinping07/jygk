/**index.wxss**/
/* 轮播图 */
.slider,.slider swiper,.slider image{
  width: 100%;
  height:390rpx;
}
/* 通知栏 */
.notice{
  width: 100%;
  height: 80rpx;
  padding: 3%;
  display:flex;
  justify-content: space-between;
  /* align-content: center; */
  /* border-bottom: 1px solid #ddd; */
}
.notice image{
  width: 13%;
  height: 80rpx;
}
.notice .swiper_container {
  width: 80%;
  height: 80rpx;
  /* margin:0 2%; */
}
.notice .swiper_item {
  display: flex;
  flex-wrap: wrap;
  margin:2rpx;
}
.notice .swiper_item text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* letter-spacing: 2px; */
}
.notice .swiper_item .title {
  width: 18%;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 20rpx;
  color:#85888d;
  background-color: rgba(0,0,0,.1);
  border-radius: 8% 8% 30% 8%;
  margin:3rpx;
}
.notice .swiper_item .msg {
  font-size: 24rpx;
  color:#333333;
  width: 75%;
  margin-left: 1%;
}


/* 热门推荐 */
.recommend_container {
  display: flex;
  flex-direction: column;
  padding: 6%;
}
.recommend_container .h1 {
  width: 100%;
  height: 70rpx;
  /* line-height: 70rpx;   */
  text-align: center;
  font-size: 18px;
  color: #333;
  font-weight: bolder;
}
.navbar {
  display: flex;
  /* position: absolute;
  left: 0;
  top: 0; */
  /* z-index: 500; */
  width: 100%;
  height: 100rpx;
  flex-direction: row;
  text-align: center;
  color: #a8a8a8;
  font-size: 15px;
  box-sizing: border-box;
  /* background-color: #fff; */
  /* border-bottom: 1rpx solid #dfdfdf; */
}
.navbar_item {
  flex: 1;
  padding: 26rpx 0px;
}
.navbar_item_active {
  transition: all 0.3s;
  /* border-bottom: 10rpx solid #494949; */
  color: #494949;
}
.navbar_fill {
  width: 23%;
  height: 8rpx;
  margin: 6rpx auto;
  border-radius: 20%;
  background-color: #fff;
}
.navbar_fill_active {
  transition: all 0.3s;
  background-color: rgb(170, 255, 205);
}
.recommend_content_wrapper{
  padding-top: 50px;
}





