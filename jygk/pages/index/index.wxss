  line-height: 95rpx;\
  height: 80rpx;
} */

/* 热门推荐 */
.recommend {
  display: flex;
  flex-direction: column;
  padding: 5%;
}
.recommend .h1 {
  width: 100%;
  height: 70rpx;
  /* line-height: 70rpx;   */
  text-align: center;
  font-size: 18px;
  color: #333;
  font-weight: bolder;
}
.navbar {
  display: flex;
  /* position: absolute;
  left: 0;
  top: 0; */
  /* z-index: 500; */
  width: 100%;
  height: 100rpx;
  flex-direction: row;
  text-align: center;
  color: #a8a8a8;
  font-size: 15px;
  box-sizing: border-box;
  /* background-color: #fff; */
  /* border-bottom: 1rpx solid #dfdfdf; */
}
.navbar_item {
  flex: 1;
  padding: 26rpx 0px;
}
.navbar_item_active {
  transition: all 0.3s;
  /* border-bottom: 10rpx solid #494949; */
  color: #494949;
}
.navbar_fill {
  width: 23%;
  height: 8rpx;
  margin: 6rpx auto;
  border-radius: 20%;
  background-color: #fff;
}
.navbar_fill_active {
  transition: all 0.3s;
  background-color: rgb(170, 255, 205);
}
.recommend_container {
  padding-top: 20rpx;
}
.recommend_container swiper{
  
  min-height: 540rpx;
}
.recommend_content {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 50rpx;
  /* padding: 2rpx; */
}
.recommend_img {
  width: 180rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 5%;
}
.recommend_info {
  width: 50%;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  line-height: 1.5;
  color: #333;
}
.recommend_info text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommend_info .recommend_name {
  font-size: 30rpx;
}
.recommend_price {
  padding-left: 30rpx;
  font-weight: bold;
  color: #ff4242;
}

