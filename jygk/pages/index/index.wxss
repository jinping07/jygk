/**index.wxss**/
/* 轮播图 */
.slider,.slider swiper,.slider image{
  width: 100%;
  height:390rpx;
}
/* 通知栏 */
.notice{
  width: 100%;
  height: 88rpx;
  padding: 3% 5%;
  display:flex;
  justify-content: space-between;
  /* align-content: center; */
  /* border-bottom: 1px solid #ddd; */
}
.notice image{
  width: 13%;
  height: 88rpx;
}
.notice .swiper_container {
  width: 80%;
  height: 88rpx;
  /* margin:0 2%; */
}
.notice .swiper_item {
  display: flex;
  flex-wrap: wrap;
  margin:2rpx;
}
.notice .swiper_item text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* letter-spacing: 2px; */
}
.notice .swiper_item .title {
  width: 18%;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 20rpx;
  color:#85888d;
  background-color: rgba(0,0,0,.1);
  border-radius: 8% 8% 30% 8%;
  margin:3rpx;
}
.notice .swiper_item .msg {
  font-size: 24rpx;
  color:#333333;
  width: 75%;
  margin-left: 1%;
}
/* 课程 */
.sub {
  min-height: 144rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 0 5%;
  margin-bottom: 2%;
}
.sub_content {
  width: 29%;
  height: 80rpx;
  margin: 3% 1% 0 1%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1%;
  border-radius: 20%;
  box-shadow: 0 0 8px 0 rgba(136, 151, 163, 0.21);
  color: #259368;
  font-size: 28rpx;
  /* text-align: center; */
  /* line-height: 80rpx; */
}
.sub_content image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
